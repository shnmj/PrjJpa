{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/Edit" method="POST">
	<input type="hidden" name="id" value={{id}} />
	<div class="mb-3">
		<label class="form-label">제목</label>
		<input type="text" name="title" class="from-control" value="{{title}}" />
	</div>
	<div class="mb-3">
		<label class="form-label">내용</label>
			<textarea class="form-control" name="content" rows="3">{{content}}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">수정완료</button>
	<a href="/articles/List" class="btn btn-secondary">목록</a>
</form>	
{{/article}} 

{{>layouts/footer}}