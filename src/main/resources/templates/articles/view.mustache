{{>layouts/header}}

<!-- BootStrap Table 참고 -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
  </thead>
  <tbody>

  	{{! #article}}
    <tr>
      <th scope="row">{{article.id}}</th>
      <td>{{article.title}}</td>
      <td>{{article.content}}</td>
    </tr>
    {{! /article}}
    
  </tbody>
</table> 

<div class="mx-auto" style="width:80%)
<a href="/articles/List"             class="btn btn-sm btn-info" style="width:100px;">목록</a>&nbsp;&nbsp;&nbsp;&nbsp;
<a href="/articles/WriteForm"        class="btn btn-sm btn-secondary" style="width:100px;">글쓰기</a>&nbsp;&nbsp;&nbsp;&nbsp;
<a href="/articles/{{article.id}}/EditForm"  class="btn btn-sm btn-warning" style="width:100px;">수정</a>&nbsp;&nbsp;&nbsp;&nbsp;
<a href="/articles/{{id}}/Delete"    class="btn btn-sm btn-danger" style="width:100px;">삭제</a>
{{! id (pathVariable) }}
</div>

