{{>layouts/header}}

<!-- BootStrap Table 참고 -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
  </thead>
  <tbody>

  	{{! #article}}
    <tr>
      <th scope="row">{{article.id}}</th>
      <td>{{article.title}}</td>
      <td>{{article.content}}</td>
    </tr>
    {{! /article}}
    
  </tbody>
</table> 

